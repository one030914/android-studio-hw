<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/LinearLayout1">

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="聯大外送平台"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="請選擇主食 (單選)"
        android:textColor="#000000"
        android:textSize="20sp" />

    <RadioGroup android:id="@+id/dish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton android:id="@+id/pork"
            android:text="豬排飯 120 元"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#0000FF" />

        <RadioButton android:id="@+id/chicken"
            android:text="雞腿飯 150 元"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#0000FF"/>

        <RadioButton android:id="@+id/rice"
            android:text="炒飯 65 元"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="#0000FF"/>

    </RadioGroup>

    <RadioGroup android:id="@+id/drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton android:id="@+id/juice"
            android:text="果汁 20 元"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#0000FF" />

        <RadioButton android:id="@+id/blacktea"
            android:text="紅茶 15 元"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#0000FF"/>

        <RadioButton android:id="@+id/greentea"
            android:text="綠茶 10 元"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="#0000FF"/>

    </RadioGroup>

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="請選擇份數"
        android:textColor="#000000"
        android:textSize="20sp" />

    <RadioGroup android:id="@+id/serving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton android:id="@+id/one"
            android:text="一份 (x1)"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#0000FF" />

        <RadioButton android:id="@+id/two"
            android:text="兩份 (x2)"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#0000FF"/>

        <RadioButton android:id="@+id/three"
            android:text="三份 (x3)"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="#0000FF"/>

    </RadioGroup>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確認送出" />

    <TextView android:id="@+id/txtResult"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textColor="#000000"
        android:textSize="20sp" />

</LinearLayout>